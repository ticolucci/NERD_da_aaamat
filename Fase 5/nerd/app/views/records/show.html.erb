<% content_for :title do %>
  <h1> <%= @record.title %> </h1>
<% end %>

<% content_for :top_links do %>
  <%= link_to image_tag("/images/edit.png", :title => "Editar"), edit_subject_record_path(@subject.id, @record.id) %>
  <%= link_to image_tag("/images/delete.png", :title => "Excluir"), subject_record_path(@subject.id, @record.id), :method => "delete", :confirm => "Excluir #{@record.title}?"%>
<% end %>

<% content_for :bottom_links do %>
  <%= link_to "Ir para assunto", subject_path(@subject.id) %>
<% end %>

<div id="record_attributes">
  <% unless @record.body.empty? %>
    <p>
      <label>Corpo:</label>
      <%= RedCloth.new(@record.body, [:filter_html]).to_html %>
    </p>
  <% end %>

  <p>
    <label>Data de Criação:</label>
    <%= l(@record.created_at) %>
  </p>
</div>