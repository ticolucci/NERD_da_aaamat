<h1><%= @subject.title %> <%= link_to image_tag("/images/edit.png", :title => "Editar"), edit_subject_path(@subject.id) %> </h1>

<table id="tasks">
  <% @tasks.each do |task| %>
    <tr id="task_<%= task.id %>">
      <td><%= task.title %></td>
    </tr>
  <% end %>
</table>

